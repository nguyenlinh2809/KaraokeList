<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="55555"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#163871"
        android:textColor="#a71212"
        android:textStyle="bold"
        android:padding="5px"
        android:id="@+id/tvCode"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:text="Chia đôi lối về"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#256c17"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giờ chia tay nhau đã đến"
            android:textColor="#ce0954"
            android:textStyle="italic"
            android:id="@+id/tvDetail"/>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6px">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/like"
                android:id="@+id/imLike"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dislike"
                android:id="@+id/imDisLike"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b9a20d"/>
    </LinearLayout>
</LinearLayout>